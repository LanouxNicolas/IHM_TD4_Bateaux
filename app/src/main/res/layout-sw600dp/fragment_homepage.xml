<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ihm.seawatch.fragments.HomePage">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="210dp"
        android:layout_marginLeft='100dp'
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <Switch
                android:id="@+id/gpsSwitch"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/border"
                android:checked="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                tools:checked="false" />

            <TextView
                android:id="@+id/gps_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="@string/location"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="75dp">

            <Button
                android:id="@+id/button_map"
                android:layout_width="120dp"
                android:layout_height="120dp"

                android:background="@android:drawable/ic_dialog_map"
                android:backgroundTint="@color/design_default_color_on_secondary"/>

            <TextView
                android:id="@+id/map_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="@string/mapToggle"
                android:layout_marginLeft="25dp"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="75dp">

            <Button
                android:id="@+id/button_post"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@android:drawable/ic_input_get"
                android:backgroundTint="@color/design_default_color_on_secondary" />

            <TextView
                android:id="@+id/post_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:text="@string/post"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="50sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/contact_dev"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="casual"
                android:text="@string/contact_dev"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginLeft="250dp"
                android:gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>