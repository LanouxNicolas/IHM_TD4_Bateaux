<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_lieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/Lieu"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:text="@string/N"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/input_N"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal|numberSigned"
                android:labelFor="@id/input_N" />

            <TextView
                android:id="@+id/post_E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="casual"
                android:text="@string/E"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_E"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal|numberSigned"
                android:labelFor="@id/input_E" />

            <CheckBox
                android:id="@+id/positionActuelle"
                android:layout_width="162dp"
                android:layout_height="24dp"
                android:layout_marginStart="20dp"
                android:text="@string/Position" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/Details"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/detail_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/border"
                android:ems="10"
                android:gravity="top|start"
                android:hint="@string/postDetailHint"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="8"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_releve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/Releve"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="casual"
                android:text="@string/Tous"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_vent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/mapDetailVent"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_vent"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:labelFor="@+id/input_vent" />

            <TextView
                android:id="@+id/post_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="casual"
                android:text="@string/KM"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/post_spinner_wind"
                android:layout_width="200dp"
                android:layout_height="45sp"
                android:layout_marginStart="20dp"
                android:dropDownWidth="match_parent"
                android:background="#C0C0C0"
                android:entries="@array/windDirection"
                android:spinnerMode="dropdown" />

            <CheckBox
                android:id="@+id/Signaler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/Signaler" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_courant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/Courant"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/post_spinner_courant"
                android:layout_width="200dp"
                android:layout_height="45sp"
                android:layout_marginStart="20dp"
                android:background="#C0C0C0"
                android:dropDownWidth="match_parent"
                android:entries="@array/windDirection"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/Temp"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_temperature"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:labelFor="@+id/input_temperature" />

            <TextView
                android:id="@+id/post_Celsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="casual"
                android:text="@string/Celsius"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/post_precipitations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="@string/Precipitation"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_precipitations"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/border"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:labelFor="@+id/input_precipitations" />

            <TextView
                android:id="@+id/post_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="casual"
                android:text="@string/MM"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cameraBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:drawable/ic_menu_camera"
                android:backgroundTint="@color/design_default_color_on_secondary" />

            <ImageView
                android:id="@+id/bitMap"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="@string/image" />

            <TextView
                android:id="@+id/post_picName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CameraHint"
                android:textColor="@android:color/tertiary_text_light"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button_toHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:fontFamily="casual"
                    android:text="@string/post_btn"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>